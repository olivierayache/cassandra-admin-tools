[Unit]
Description=Cassandra Administration Tools
After=network.target

[Service]
WorkingDirectory=/var/lib/${artifactId}
EnvironmentFile=/etc/default/${artifactId}
Type=simple
ExecStart=/usr/bin/java ${EXTRA_JAVA_OPTS} -jar /usr/share/${artifactId}/${project.build.finalName}.jar -jh ${JAXRS_HOST} -jp ${JAXRS_PORT}
Restart=on-failure